section.content-wrapper
	article.content
		div.post
			div.post-head
				div.main-info
					div.post-title
						h1 {{post.title}}
					div.author-info
						a(ng-href="/user/{{post.author.user_id}}").username {{post.author.username}}
				div.sub-info
					a.tag(ng-repeat="tag in post.tags" ng-href="/posts/tags/{{tag.tag_name}}") {{tag.tag_name}}
					//- span link
					time {{post.created_at | timeAgo}}
			div.post-content
				div( ng-bind-html="post.content")
				//- {{ post.content }}
			div.post-footer(data-ng-show="auth" ng-if="!pooked")
				button(ng-click="like()") {{likeStatus}}
				button(ng-click="pook()")
					img(src="img/logo-1-24.png")

			//- script(async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
