			//- 	data-ad-slot="6928329278")
			//- script.
			//- 	(adsbygoogle = window.adsbygoogle || []).push({});


			div.comment-box
				div.comment(ng-repeat="comment in comments")
					div.comment-info
						a(ng-href="/user/{{comment.author.user_id}}").username {{comment.author.username}}
						time.timeago {{comment.created_at | timeAgo}}
					div.comment-content
						pre {{comment.content}}
			div.write-comment(data-ng-show="auth")
				form(ng-submit="submit()")
					textarea(placeholder="Write a comment for this post. You should write more than 5 letters." ng-model="comment")
					button(type="submit") {{500 - comment.length}} Letters Left


	aside.sidebar
		div.side-box
			div.side-title
				span Popular Posts
			div.side-list
				a(ng-repeat="best in bests" ng-href="/post/{{best._id}}")
					span {{best.title}}
					em +{{best.likes}}

