section.content-wrapper
	article.content
		a(href="/intro")
			img(src="img/panda.jpg" style="background-color:#fff; margin:0 auto; width:100%; ")
		div.board-box
			div.board-head
				span {{boardTitle}}
			div.board
				a(ng-repeat="notice in notices" ng-href="/notice/{{notice._id}}")
					em.tag(ng-repeat="tag in notice.tags") {{tag.tag_name}}
					span {{notice.title}}
					em.likes +{{notice.likes}}
					div
						em.username {{notice.author.username}}
						time {{notice.created_at | timeAgo}}



	aside.sidebar
		div.side-box
			div.side-title
				span Popular Posts
			div.side-list
				a(ng-repeat="best in bests" ng-href="/post/{{best._id}}")
					span {{best.title}}
					em +{{best.likes}}
